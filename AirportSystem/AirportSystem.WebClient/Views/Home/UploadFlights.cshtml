@{
    ViewBag.Title = "Upload Flights";
}

<h2>Upload Flights From File</h2>

@using (Html.BeginForm("UploadFlightsApply", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <p>
        <label for="fileToUpload">Select File</label>   
        <input type="file" name="file"/> 
    </p>
    <p>
        <span class="d-inline label label-warning">Note: </span>
        <span>&nbsp;&nbsp;Accepted file formats are: <strong>XML, JSON, Excel</strong></span>
    </p>
    <p>
        <input type="submit" class="grid-filter-btn btn-large btn-info" value="Upload File" />         
    </p>

}