@using AirportSystem.Models
@model Flight
@{
    ViewBag.Title = "Flight Details";
}

@using (Html.BeginForm("Index", "Home", new { ReturnUrl = ViewBag.ReturnUrl }))
{
    <div class="row">
        <div class="col-md-6">
            <h1> </h1>
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h3 class="panel-title">Flight Details</h3>
                </div>
                <div class="panel-body">
                    <div id="flight-details-div" class="formcell">
                        <table>
                            <tr>
                                <td>@Html.Label("SheduledTime.TimeOfDay", "Time")</td>
                                <td>@Html.TextBoxFor(m => m.SheduledTime.TimeOfDay, new { @readonly = "readonly" })</td>
                            </tr>
                            <tr>
                                <td>@Html.Label("FlightType.Name", "Flight Type")</td>
                                <td>@Html.TextBoxFor(m => m.FlightType.Name, new { @readonly = "readonly" })</td>
                            </tr>
                            <tr>
                                <td>@Html.Label("DestinationAirport", "Airport Code")</td>
                                <td>@Html.TextBoxFor(m => m.DestinationAirport.Code, new { @readonly = "readonly" })</td>
                            </tr>
                            <tr>
                                <td>@Html.Label("DestinationAirport.Name", "Destination")</td>
                                <td>@Html.TextBoxFor(m => m.DestinationAirport.Name, new { @readonly = "readonly" })</td>
                            </tr>
                            <tr>
                                <td>@Html.Label("Terminal.Name", "Terminal")</td>
                                <td>@Html.TextBoxFor(m => m.Terminal.Name, new { @readonly = "readonly" })</td>
                            </tr>
                            <tr>
                                <td>@Html.Label("Plane.Manufacturers.Name", "Plane Manufacturer")</td>
                                <td>@Html.TextBoxFor(m => m.Plane.Manufacturers.Name, new { @readonly = "readonly" })</td>
                            </tr>
                            <tr>
                                <td>@Html.Label("Plane.Models.Name", "Plane Model")</td>
                                <td>@Html.TextBoxFor(m => m.Plane.Models.Name, new { @readonly = "readonly" })</td>
                            </tr>
                            <tr>
                                <td>@Html.Label("Plane.Airlines.Name", "Airline")</td>
                                <td>@Html.TextBoxFor(m => m.Plane.Airlines.Name, new { @readonly = "readonly" })</td>
                            </tr>
                            <tr>
                                <td>@Html.Label("Plane.PlanePassport.RegistrationNumber", "Plane Registration")</td>
                                <td>@Html.TextBoxFor(m => m.Plane.PlanePassport.RegistrationNumber, new { @readonly = "readonly" })</td>
                            </tr>
                            <tr>
                                <td>@Html.Label("Plane.PlanePassport.YearOfRegistration", "Year Of Registration")</td>
                                <td>@Html.TextBoxFor(m => m.Plane.PlanePassport.YearOfRegistration, new { @readonly = "readonly" })</td>
                            </tr>
                            <tr>
                                <td>@Html.Label("Plane.PlanePassport.State", "Plane State")</td>
                                <td>@Html.TextBoxFor(m => m.Plane.PlanePassport.State, new { @readonly = "readonly" })</td>
                            </tr>
                            <tr>
                                <td>@Html.Label("Plane.Models.Seats", "Plane Seats")</td>
                                <td>@Html.TextBoxFor(m => m.Plane.Models.Seats, new { @readonly = "readonly" })</td>
                            </tr>
                            <tr>
                                <td></td>
                                <td><input type="submit" class="grid-filter-btn btn-large btn-info" value="Back To Flights" /></td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}